@model IEnumerable<ResumeManagement.Models.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


<h2>All Employee's Information</h2>
<div class="row">
    <div class="d-flex justify-content-end mb-2">
        <a href="@Url.Action("Create", "Employees")" id="btnCreate" class="btn btn-success">Add New Employee</a>
    </div>
    @foreach (var item in Model)
    {
        <div class="card mb-3 p-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="@item.Picture" class="rounded img-thumbnail" />
                </div>
                <div class="col-md-8">
                    <div class="justify-content-between">
                        <label class="mr-2"><b>Employee Name :</b> @Html.DisplayFor(e => item.EmployeeName)</label><br />
                        <label class="mr-2"><b>Join date :</b> @Html.DisplayFor(e => item.JoinDate)</label><br />
                        <label class="mr-2"><b>Salary :</b> @Html.DisplayFor(e => item.salary)</label><br />
                        <label class="mr-2"><b>Active :</b> @Html.DisplayFor(e => item.isActive)</label>


                        <table class="table table-bordered table-striped table-sm mt-3">
                            <thead>
                                <tr>
                                    <th>Qualification Id</th>
                                    <th>Qualification Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var q in item.QualificationEntries)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(x => q.Qualification.QualificationId)</td>
                                        <td>@Html.DisplayFor(x => q.Qualification.QualificationName)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="mt-3">
                            <a class="btn btn-primary" href="@Url.Action("Edit", "Employees", new { id = item.EmployeeId })">Edit Employee</a>&nbsp;
                            <a class="btn btn-danger" href="@Url.Action("Delete", "Employees", new { id = item.EmployeeId })">Delete Employee</a>
                        </div>
                    </div>
                    
                </div>
            </div>

        </div>
    }
</div>
